
<%link_to("<< back to search",{:action=>'sort_form'})%>

<h2> dog entry for: <%=@dish.name%></h2> <br /><br />
<% unless session[:user_id] %>
	<aside class="left">
		<%= dish_image(@dish,'300x300') %>  
	</aside>
	&nbsp;&nbsp;
<% else %>
	
	<aside class="left">
		<%= dish_image(@dish,'250x250') %>  
	</aside>
	&nbsp;&nbsp;

<% end %>
<% unless session[:user_id] %>

	<p>color:&nbsp;&nbsp; <%= @dish.taste %> </p><br />
	<p>race: &nbsp;&nbsp;<%= @dish.culture %> </p><br />
	<p>aggressive?: &nbsp;&nbsp;<%= @dish.mealpart %> </p><br /><br />

	<%if @dish.user_id.blank? || @dish.user_id==session[:user_id] %>
		<%=link_to("edit dog entry", edit_dish_path(@dish.id)) %>
	<%end%>
	&nbsp;&nbsp;			
	
	<%if @dish.user_id==session[:user_id]%>				
		<%=link_to("delete dog entry", delete_dish_path(@dish.id))%>
	<%end%>
	<br />
	
<% else %>

	<div class="right"> 
		<p>color:&nbsp;&nbsp; <%= @dish.taste %> </p><br />
		<p>race: &nbsp;&nbsp;<%= @dish.culture %> </p><br />
		<p>aggressive?: &nbsp;&nbsp;<%= @dish.mealpart %> </p><br /><br />
	
		<%if @dish.user_id.blank? || @dish.user_id==session[:user_id] %>
			<%=link_to("edit dog entry", edit_dish_path(@dish.id)) %>
		<%end%>
		&nbsp;&nbsp;			
	
		<%if @dish.user_id==session[:user_id]%>				
			<%=link_to("delete dog entry", delete_dish_path(@dish.id))%>
		<%end%>
		<br />
	</div>
<% end %>
<br /><br /><br /><br />

<h2>daily food</h2><br /><br />

<table class="small table">
	<thead>
		<tr>
			<th><u>quantity</u></th>
			<th><u>measure</u></th>
			<th><u>grocery</u></th>
		</tr>
	</thead>
	<tbody>
	<% @dish.groceries.to_a.each do |g| %>
		<tr>
			<td><%=g.quantity%></td>
			<td><%=g.measure%></td>
			<td><%=g.name%></td>
		</tr>
	<%end%>
	</tbody>
</table>

<br />
<h2>character</h2>
<p><%=@dish.recipe%></p>
<br /><br />

<h2>life style</h2>
<p><%=@dish.health_value%></p>

  
  
